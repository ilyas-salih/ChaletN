<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.iakstudios.app.chaletIn.Add_page">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">




            <LinearLayout
                android:id="@+id/pric_rat"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="8dp"

                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/card_type_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:drawablePadding="7dp"
                        android:drawableRight="@drawable/card_type"
                        android:gravity="center"
                        android:text="نوع البطاقة"
                        android:textSize="19sp"
                        android:textStyle="bold" />


                    <EditText
                        android:id="@+id/card_info"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:gravity="center"
                        android:hint="عائلة/ شباب"
                        android:textColor="#000"
                        android:textSize="15sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/price_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:drawablePadding="7dp"
                        android:drawableRight="@drawable/price"
                        android:gravity="center"
                        android:text="السعر"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/price_ifno"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:gravity="center"
                        android:hint="1000"
                        android:inputType="number"
                        android:textColor="#000"
                        android:textSize="15sp" />


                </LinearLayout>
            </LinearLayout>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="3dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:text="الخصائص العامة "
                        android:layout_marginTop="10dp"
                        android:textDirection="rtl"
                        android:textSize="17dp"
                        android:textStyle="bold"

                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="5dp"
                        android:background="#000000"/>
                    <LinearLayout
                        android:id="@+id/liner_pubic3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">



                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:layout_weight="2"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/kitchen_txt3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="مطبخ"
                                android:textColor="#000"
                                android:textSize="18dp" />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:gravity="center"
                                android:textColor="#000"
                                android:textSize="16dp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:layout_margin="5dp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/bath_txt4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="حمامات"
                                android:textColor="#000"
                                android:textSize="18dp" />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:gravity="center"
                                android:textColor="#000"
                                android:textSize="16dp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:layout_weight="2"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/room_txt4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="غرف"
                                android:textColor="#000"
                                android:textSize="18dp" />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:gravity="center"
                                android:textColor="#000"
                                android:textSize="16dp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/guest_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="أفراد"
                                android:textColor="#000"
                                android:textSize="18dp" />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:gravity="center"
                                android:textColor="#000"
                                android:textSize="16dp" />

                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="3dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:text="خدمات يقدمها الشالية "
                        android:layout_marginTop="10dp"
                        android:textDirection="rtl"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#000000"
                        android:layout_marginTop="10dp"/>









                    <LinearLayout
                        android:id="@+id/liner_pubic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.41">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:layout_margin="5dp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:orientation="vertical">

                            <Switch
                                android:id="@+id/play_switch"
                                android:layout_width="48dp"
                                android:layout_height="wrap_content"
                                android:checked="false"
                                android:textOff="Off"
                                android:textOn="On" />

                            <TextView
                                android:id="@+id/frdg_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="7dp"
                                android:gravity="center"
                                android:text="ملعب"
                                android:textColor="#000"
                                android:textSize="16dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <Switch
                                android:id="@+id/swim_switch"
                                android:layout_width="48dp"
                                android:layout_height="wrap_content"
                                android:checked="false"
                                android:textOff="Off"
                                android:textOn="On" />

                            <TextView
                                android:id="@+id/siting_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="7dp"
                                android:gravity="center"
                                android:text="مسبح"
                                android:textColor="#000"
                                android:textSize="16dp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:layout_margin="5dp"
                            android:gravity="center"

                            android:layout_weight="2"
                            android:orientation="vertical">

                            <Switch
                                android:id="@+id/refrig_switch"
                                android:layout_width="48dp"
                                android:layout_height="wrap_content"
                                android:checked="false"
                                android:textOff="Off"
                                android:textOn="On" />

                            <TextView
                                android:id="@+id/bed_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="7dp"
                                android:gravity="center"
                                android:text="ثلاجة"
                                android:textColor="#000"
                                android:textSize="16dp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:layout_margin="5dp"
                            android:layout_weight="2"
                            android:gravity="center"

                            android:orientation="vertical">

                            <Switch
                                android:id="@+id/sofa_con_switch"
                                android:layout_width="48dp"
                                android:layout_height="wrap_content"
                                android:checked="false"
                                android:textOff="Off"
                                android:textOn="On" />

                            <TextView
                                android:id="@+id/air_con_txt2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="7dp"
                                android:gravity="center"
                                android:text="مجلس"
                                android:textColor="#000"
                                android:textSize="16dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:layout_margin="5dp"
                            android:layout_weight="2"
                            android:gravity="center"

                            android:orientation="vertical">

                            <Switch
                                android:id="@+id/bed_con_switch"
                                android:layout_width="48dp"
                                android:layout_height="wrap_content"
                                android:checked="false"
                                android:textOff="Off"
                                android:textOn="On"
                                />

                            <TextView
                                android:id="@+id/bed_con_txt2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="7dp"
                                android:gravity="center"
                                android:text="غرفه نوم"
                                android:textColor="#000"
                                android:textSize="16dp" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="تفاصيل اضافية"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"/>

            <EditText
                android:id="@+id/descmore_txt"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:padding="20dp"
                android:textStyle="bold"
                android:textSize="14sp"
                android:hint="مثال على دلك :رقم الجوال او الايميل"
                android:background="@drawable/button_back2"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="تحديد الخريطة"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"/>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="270dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             >
             <AutoCompleteTextView
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="1"
                 android:textSize="15sp"
                 android:textColor="#000"
                 android:textDirection="ltr"
                 android:layoutDirection="ltr"
                 android:id="@+id/input_search"
                 android:inputType="textShortMessage"
                 android:background="@drawable/button_back3"
                 android:drawableLeft="@drawable/search"
                 android:gravity="center"
                android:paddingLeft="5dp"
                 android:hint="المدينة / أدخل العنوان"
                 android:imeOptions="actionSearch"/>

             <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                 xmlns:tools="http://schemas.android.com/tools"
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="4"
                 android:layout_gravity="center_horizontal"
                 android:background="@drawable/button_back2"
                 android:id="@+id/map"
                 tools:context=".Map_actvity"
                 android:layout_marginTop="5dp"
                 android:layout_marginBottom="5dp"
                 android:name="com.google.android.gms.maps.SupportMapFragment" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="7dp"
                android:paddingTop="7dp"
                android:text="Done"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="16dp"
                android:background="@drawable/button_back3"
                />

         </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="تحميل الصور"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"/>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="5dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/photo_1"
                            android:padding="5dp"
                            android:scaleType="centerInside"
                            android:layout_width="0dp"
                            android:src="@drawable/home"
                            android:layout_weight="1"
                            android:layout_height="150dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/border"/>

                        <ImageView
                            android:id="@+id/photo_2"
                            android:layout_width="0dp"
                            android:padding="5dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/more_home_icon"
                            android:layout_weight="1"
                            android:layout_height="150dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/border"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/photo_3"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/more_home_icon"
                            android:layout_height="150dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/border"/>

                        <ImageView
                            android:id="@+id/photo_4"
                            android:layout_width="0dp"
                            android:padding="5dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/more_home_icon"
                            android:layout_weight="1"
                            android:layout_height="150dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/border"/>

                    </LinearLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/button_upload"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:padding="7dp"
                    android:background="@drawable/button_next"
                    android:text="ارسال"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="16dp"

                    />



            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>